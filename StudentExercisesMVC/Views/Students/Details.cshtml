@model StudentExercisesMVC.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CohortId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CohortId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cohort.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cohort.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SlackHandle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SlackHandle)
        </dd>

    </dl>
    <div>
        <h4>
            Assigned Exercises
        </h4>
        @foreach (Exercise exercise in Model.Exercises)
        {
            <p>Exercise</p>
            <p>
               Name: @Html.DisplayFor(model => exercise.Name)
            </p>
            <p>
               Language: @Html.DisplayFor(model => exercise.Language)
            </p>
        }
    </div>
        
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
